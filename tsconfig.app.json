{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@Auth": ["./src/auth"],
      "@Core": ["./src/core"],
      "@Dashboard": ["./src/dashboard"],
      "@Router": ["./src/router"],
      "@Shared": ["./src/shared"]
    }
  }
}
